<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_ciencias"
        android:layout_alignParentTop="true"
        class="com.google.android.gms.maps.SupportMapFragment"

        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ciencias"
        android:layout_above="@+id/btn_ingenieria"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_lugar"
        android:clickable="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@drawable/color_selector"
        android:gravity="center"
        android:text="Facultad de Ciencias"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ingenieria"
        android:layout_above="@+id/btn_posgrado"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_lugar"
        android:clickable="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@drawable/color_selector"
        android:gravity="center"
        android:text="Facultad de Ingeniería"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_posgrado"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/selector_lugar"
        android:clickable="true"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@drawable/color_selector"
        android:gravity="center"
        android:text="Posgrado de Ingeniería"/>

</RelativeLayout>